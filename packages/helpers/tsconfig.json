{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2017", "dom"],
    "declaration": true,
    "declarationDir": "types",
    "outDir": "lib",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "pretty": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "allowJs": false,
    "types" : ["node", "lodash", "webpack", "jest"]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.mock.*"
  ]
}
