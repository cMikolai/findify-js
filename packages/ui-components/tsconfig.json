{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2017", "dom"],
    "moduleResolution": "node",
    "module": "es6",
    "sourceMap": true,
    "jsx": "react",
    "removeComments": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "./__lib-es6__/",
    "rootDirs": [
      "src", "dev"
    ],
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
